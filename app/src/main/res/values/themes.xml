<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AADKCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.AADKCalculator" parent="Base.Theme.AADKCalculator" />

    <style name="acButton" parent="commonButton">
        <item name="backgroundTint">@color/lightGreen</item>
    </style>

    <style name="operatorButton" parent="commonButton">
        <item name="backgroundTint">@color/lightBlue</item>
    </style>
    <style name="equalButton" parent="commonButton">
        <item name="backgroundTint">@color/lightPurple</item>
    </style>
    <style name="numbers" parent="commonButton">
        <item name="backgroundTint">@color/lightGrey</item>
        <item name="background">@drawable/round_numbers</item>
    </style>
    <style name="commonButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>
</resources>